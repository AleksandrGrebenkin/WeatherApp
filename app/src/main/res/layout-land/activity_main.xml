<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal">


    <fragment
        android:id="@+id/activity_main__fragment_cities_list"
        android:name="com.github.alexandrgrebenkin.weatherapp.Interface.CitiesListFragment"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="2" />

    <fragment
        android:id="@+id/activity_main__fragment_weather_info"
        android:name="com.github.alexandrgrebenkin.weatherapp.Interface.WeatherInfoFragment"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="3" />
</LinearLayout>